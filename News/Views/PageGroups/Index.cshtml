@model IEnumerable<News.ViewModel.Page.ShowGroupsVM> 

@{
    ViewData["Title"] = "گروه های خبری";
}


<p>
    <a asp-action="Create" class="btn btn-primary">ساخت گروه جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               عنوان گروه خبری
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupTitle)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.GroupId">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.GroupId" class="btn btn-warning btn-sm">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.GroupId" class="btn btn-danger btn-sm">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
