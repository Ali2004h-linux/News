@model News.DomainClasses.Page.Page
@using News.Utilities.Converter;

@{
    ViewData["Title"] = "Delete";
}

<h2>حذف خبر</h2>
<br />

<h3>آیا از حذف این خبر مطمئن هستید ؟؟</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.PageTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PageTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>

        <dd>
            <img src="~/NewsImages/@Model.ImageName" class="thumbnail" style="max-width:200px" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd>
            @Model.CreateDate.ToShamsi()
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Writer)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Writer)
        </dd>
    </dl>

    <form action="Delete?id=@Model.PageId" method="post">
        <input type="hidden" asp-for="PageId" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a href="Index" class="btn-info">برگشت به لیست خبرها</a>
    </form>
</div>
