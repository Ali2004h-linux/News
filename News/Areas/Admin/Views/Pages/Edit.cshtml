@model News.DomainClasses.Page.Page

@{
    ViewData["Title"] = "ویرایش خبر";
}

<h2>ویرایش خبر</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" action="/admin/pages/Edit?id=@Model.PageId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageId" />
            <input type="hidden" asp-for="ImageName" />
            <input type="hidden" asp-for="Visit" />
            <input type="hidden" asp-for="CreateDate" />
            <div class="form-group">
                <label asp-for="GroupId" class="control-label"></label>
                <select asp-for="GroupId" class="form-control" asp-items="ViewBag.Groups" />
            </div>
            <div class="form-group">
                <label asp-for="PageTitle" class="control-label"></label>
                <input asp-for="PageTitle" class="form-control" />
                <span asp-validation-for="PageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <textarea asp-for="ShortDescription" class="form-control"></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageContent" class="control-label"></label>
                <textarea asp-for="PageContent" class="form-control"></textarea>
                <span asp-validation-for="PageContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageName" class="control-label"></label>
                <input type="file" name="imgup" class="form-control" />
                <img src="~/NewsImages/@Model.PageId" class="thumbnail" style="max-width:200px"/>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label for="a">
                        @Html.DisplayNameFor(model => model.ShowSlider)

                    </label>
                    <input id="a" asp-for="ShowSlider" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PageTag" class="control-label"></label>
                <input asp-for="PageTag" class="form-control" />
                <span asp-validation-for="PageTag" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Admin/Index">بازگشت به لیست</a>
</div>

