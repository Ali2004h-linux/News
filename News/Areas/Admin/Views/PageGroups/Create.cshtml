@model News.DomainClasses.PageGroups.PageGroup

@{
    ViewData["Title"] = "ساخت گروه خبری";
}

<h2>ساخت یه گروه خبری</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupTitle" class="control-label"></label>
                <input asp-for="GroupTitle" class="form-control" />
                <span asp-validation-for="GroupTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ساختن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="Index">برگشت به لیست گروه های خبری</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
